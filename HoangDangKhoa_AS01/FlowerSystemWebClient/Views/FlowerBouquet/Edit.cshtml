@model BusinessObjects.FlowerBouquet;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
}

<h4>FlowerBouquet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlowerBouquetID" />
            <div class="form-group mb-2">
                <label asp-for="FlowerBouquetName" class="control-label mb-1">Name</label>
                <input asp-for="FlowerBouquetName" class="form-control" />
                <span asp-validation-for="FlowerBouquetName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label mb-1"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UnitPrice" class="control-label mb-1">Unit price</label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UnitsInStock" class="control-label mb-1">Unit in stock</label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CategoryID" class="control-label mb-1">Category</label>
                <select asp-for="CategoryID" class="form-control">
                    @foreach (var std in (List<BusinessObjects.Category>)ViewData["Categories"])
                    {
                        <option value="@std.CategoryID">@std.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SupplierID" class="control-label mb-1">Supplier</label>
                <select asp-for="SupplierID" class="form-control">
                    @foreach (var std in (List<BusinessObjects.Supplier>)ViewData["Suppliers"])
                    {
                        <option value="@std.SupplierID">@std.SupplierName</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

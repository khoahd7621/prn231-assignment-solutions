@model DataTransfer.CompanyProjectPutRequest

@{
    ViewData["Title"] = "Edit";
    BusinessObjects.CompanyProject companyProject = ViewData["companyProject"] as BusinessObjects.CompanyProject;
}

<h1>Edit</h1>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">@ViewData["ErrorMessage"]</div>
}
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">@ViewData["SuccessMessage"]</div>
}

<h4>Company Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompanyProjectID" value=@companyProject.CompanyProjectID />
            <div class="form-group mb-2">
                <label asp-for="ProjectName" class="control-label mb-1">Name</label>
                <input asp-for="ProjectName" class="form-control" value=@companyProject.ProjectName />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ProjectDescription" class="control-label mb-1">Description</label>
                <input asp-for="ProjectDescription" class="form-control" value=@companyProject.ProjectDescription />
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
